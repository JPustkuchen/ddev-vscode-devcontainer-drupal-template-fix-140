// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.183.0/containers/php
{
	"name": "DDEV",
	"build": {
		"dockerfile": "ddev.Dockerfile",
		"args": {
			// Update VARIANT to pick a PHP version: 8, 8.0, 7, 7.4, 7.3
			"VARIANT": "7.4",
		}
	},

	// Set "default" container specific settings.json values on container create.
	"settings": {

		/*--------------------------------------------------PHP Specific Settings--------------------------------------------------*/
		"emmet.showAbbreviationSuggestions": false,
		"emmet.showExpandedAbbreviation": "never",
		"intelephense.files.exclude": [ //more specific excludes so Tests should be recognized
			"**/.git/**",
			"**/.svn/**",
			"**/.hg/**",
			"**/CVS/**",
			"**/.DS_Store/**",
			"**/node_modules/**",
			"**/bower_components/**",
			"**/vendor/**/{Test,test,Tests,tests}/**/*Test.php"
		],
		"intelephense.environment.shortOpenTag": true,
		"editor.wordSeparators": "`~!@#%^&*()-=+[{]}\\|;:'\",.<>/?",
		"php-docblocker.gap": true,
		"php-docblocker.useShortNames": true,
		"editor.quickSuggestions": {
			"comments": true
		},
		"javascript.validate.enable": false,
		"javascript.format.enable": false,
		"php.suggest.basic": false, //disable basic php suggests for better Intelephense Suggestions
		"terminal.integrated.defaultProfile.linux": "bash",
		//"php-cs-fixer.rules": "@PhpCsFixer", needs cs!
		"editor.formatOnSaveTimeout": 5000, //Anti Linting Save Refuse
		"emptyIndent.removeIndent": true, //Automatically remove indentation in empty lines on save
		"emptyIndent.highlightIndent": false, //Highlight indent on empty lines
		"emptyIndent.highlightColor": "rgba(246,36,89,0.6)", //Highlight indent color
		"emptyIndent.exclude": [
			".md"
		], //Excluded file types
		//"phpcs.enable": true,	//activate with phpcs
		//"phpcs.standard": "Drupal,DrupalPractice",	//phpcs standard

		/*--------------------------------------------------Drupal Specific Settings--------------------------------------------------*/
		"intelephense.environment.includePaths": [
			"web/core/includes"
		],
		"intelephense.files.associations": [
			"*.inc",
			"*.theme",
			"*.install",
			"*.module",
			"*.profile",
			"*.php",
			"*.phtml"
		],
		"breadcrumbs.enabled": true,
		"diffEditor.ignoreTrimWhitespace": false,
		"editor.tabSize": 2,
		"editor.insertSpaces": true,
		"editor.formatOnPaste": true,
		"editor.formatOnSave": false,
		"editor.renderWhitespace": "boundary",
		"editor.wordWrapColumn": 80,
		"editor.wordWrap": "off",
		"editor.detectIndentation": true,
		"html.suggest.html5": true,
		"css.validate": true,
		"editor.rulers": [
			80
		],
		"files.associations": {
			"*.inc": "php",
			"*.module": "php",
			"*.install": "php",
			"*.theme": "php",
			"*.tpl.php": "php",
			"*.test": "php",
			"*.php": "php",
			"*.info": "ini",
			"*.html": "twig",
		},
		"files.trimTrailingWhitespace": true,
		"files.insertFinalNewline": true,
		"html.format.enable": true,
		"html.format.wrapLineLength": 80,
		"telemetry.enableTelemetry": false,
		"emmet.includeLanguages": {
			"twig": "html"
		},
		"html.validate.scripts": false,
		"html.validate.styles": false,
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		/*--------------------------------------------------PHP Specific Extensions--------------------------------------------------*/
		"felixfbecker.php-debug",
		"mrmlnc.vscode-apache",
		"bmewburn.vscode-intelephense-client",
		"phproberto.vscode-php-getters-setters",
		"mehedidracula.php-namespace-resolver",
		"neilbrayfield.php-docblocker",
		"wayou.vscode-todo-highlight",
		//"shevaua.phpcs", 			needs php code-sniffer
		//"junstyle.php-cs-fixer"	needs php code sniffer

		/*--------------------------------------------------Drupal 8 Specific Extensions--------------------------------------------------*/
		"ikappas.composer",
		"tsega.drupal-8-javascript-snippets",
		"tsega.drupal-8-twig-snippets",
		"mblode.twig-language", //Switch to "mblode.twig-language-2" if necessary

		/*--------------------------------------------------Drupal 7 Specific Extension--------------------------------------------------*/
		//"juniormucciolo.drupal-7-snippets",
		//"pauloamgomes.drupal7-hooks-snippets",

		/*--------------------------------------------------Other Extensions--------------------------------------------------*/
		"ms-azuretools.vscode-docker",
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		9000
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	//"remoteUser": "vscode"
}
