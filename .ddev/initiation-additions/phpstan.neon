parameters:
  level: 2

  paths:
  - .

  fileExtensions:
      - inc
      - php
      - module
      - install
      - theme
      - tpl.php
      - test

  ignoreErrors:
    # new static() is a best practice in Drupal, so we cannot fix that.
    - "#^Unsafe usage of new static#"

    # This check was ignored on purpose until the issues with it, which started in version 1.1.15, are solved.
    # @see https://www.drupal.org/node/3280328
    - "#^Missing explicit access check on entity query.#"

  excludePaths:
      # only scan our modules folder:
      analyse:
          - .ddev
          - .vscode
          - data
          - node_modules
          - vendor
          - web/core
          - web/sites
          - web/themes/contrib
          - web/modules/contrib
